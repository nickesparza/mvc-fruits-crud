{% layout 'layout.liquid' %}

{% block content %}
    <div class="container-md">
        <form action="/fruits/{{fruit._id}}?_method=PUT" method="POST">
            <legend>Edit {{fruit.name}}</legend>
            <fieldset>
                <label class="form-label" for="name">Fruit Name</label>
                <input class="form-control"
                    type="text" 
                    id="name" 
                    name="name" 
                    value="{{fruit.name}}" 
                    placeholder="Enter name"
                >
                <label class="form-label" for="color">Fruit Color</label>
                <input class="form-control"
                    type="text" 
                    id="color" 
                    name="color" 
                    value="{{fruit.color}}" 
                    placeholder="Enter color"
                >
                <label class="form-label" for="readyToEat">Ready to Eat?</label>
                <input class="form-check-input"
                    type="checkbox" 
                    id="readyToEat" 
                    name="readyToEat" 
                    {% if fruit.readyToEat %}
                        checked
                    {% endif %}
                >
            </fieldset>
            <div class="btn-group">
                <input 
                    class="btn btn-success" 
                    type="submit" 
                    value="Edit {{fruit.name}}"
                >
                <a href="/fruits/{{fruit._id}}" class="btn btn-warning">Never Mind</a>
            </div>
        </form>
    </div>
{% endblock %}